---
import Layout from '../layouts/Layout.astro';

import { projectDocs, backendDocs } from '../data/document-links'
import CardGroup from "../components/CardGroup.astro";

---

<Layout title="Welcome to Where Were We Documents">
	<main>
		<h1>Where Were We Documents</h1>
		<CardGroup {...projectDocs} />
		<CardGroup {...backendDocs} />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		text-align: center;
	}
</style>
